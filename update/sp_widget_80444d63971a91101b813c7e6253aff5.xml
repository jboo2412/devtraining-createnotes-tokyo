        <script><![CDATA[(function() {
  	data.notes = [];
	var noteGR = new GlideRecord('alm_asset');
	noteGR.addQuery('assigned_to', gs.getUser().getID());
	noteGR.orderByDesc('sys_created_on');
	noteGR.query();
	while (noteGR.next()) {
		var noteObj = {};

		$sp.getRecordDisplayValues(noteObj, noteGR, 'display_name,asset_tag,sys_id');

		noteObj.note = noteGR.getValue('display_name').slice(0,20);

		data.notes.push(noteObj);
	}
})();]]></script>
